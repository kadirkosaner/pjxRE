:: variablesFotogram [init nobr]
/* =============================================================================
   FOTOGRAM â€“ GLOBAL SETTINGS
   =============================================================================
   Bu dosya fallback kullanmadan calisan tum Fotogram ayarlarini tutar.
   DM metin havuzlari ve flow node icerikleri ilgili DM dosyalarinda kalir.
   ============================================================================= */

/* Post / feed */
<<set setup.fotogramNotPostableFlags = ["topless", "nude", "explicit"]>>
<<set setup.fotogramCommentLikeRatio = 0.08>>
<<set setup.fotogramPostCooldownDefaultDays = 3>>
<<set setup.fotogramPostCooldownMinDays = 2>>
<<set setup.fotogramPostCooldownMaxDays = 4>>
<<set setup.fotogramHourlyWindowHours = 3>>
<<set setup.fotogramHourlyShare = 0.4>>
<<set setup.fotogramDailyShare = 0.6>>
<<set setup.fotogramActiveDaysMin = 3>>
<<set setup.fotogramActiveDaysMax = 5>>

/* DM profile / thresholds */
<<set setup.fotogramDmAgeMin = 18>>
<<set setup.fotogramDmAgeMax = 60>>
<<set setup.fotogramDmMaleWeight = 0.7>>
<<set setup.fotogramDmFemaleWeight = 0.3>>
<<set setup.fotogramDmMinConfidenceInteractive = 30>>
<<set setup.fotogramDmMinCorruptionSwap = 2>>
<<set setup.fotogramAnonSkinTones = ["white", "black"]>>

/* Interactive DM â€“ anon type weights (1=getoff, 2=objectifier, 3=number_hunter, 4=flirty, 5=praise_fan, 6=unsolicited_sender) */
<<run setup.fotogramDMAnonTypeWeights = { 1: 15, 2: 20, 3: 15, 4: 15, 5: 5, 6: 30 }>>
/* Min/max total messages per chat (anon + player) */
<<set setup.fotogramDMMinTotalMessages = 15>>
<<set setup.fotogramDMMaxTotalMessages = 22>>

/* Interactive DM scenario selection â€“ single flow (realistic chat) */
<<set setup.fotogramDMScenarioTypes = ["chat_open"]>>
<<run setup.fotogramDMScenarioWeightsByFlag = {
  default: { chat_open: 100 },
  spicy: { chat_open: 100 },
  risky: { chat_open: 100 },
  teasing: { chat_open: 100 },
  bikini: { chat_open: 100 },
  hot: { chat_open: 100 }
}>>

/* Interactive DM variety controls */
<<set setup.fotogramDMAnonTypeRecentWindow = 5>>
<<set setup.fotogramDMAnonTypeRecentPenalty = 0.25>>
<<set setup.fotogramDmScenarioRecentWindow = 4>>
<<set setup.fotogramDmScenarioRecentPenalty = 0.55>>
<<set setup.fotogramDmNodeTextRecentWindow = 8>>
<<set setup.fotogramDmNodeTextStrictTurns = 2>>
<<set setup.fotogramDmAttachmentRecentWindow = 6>>
<<set setup.fotogramDmAttachmentStageHeatMid = 3>>
<<set setup.fotogramDmAttachmentStageHeatLate = 6>>
<<set setup.fotogramDmAttachmentStageTrustLate = 3>>
<<set setup.fotogramDMAttachmentPoolsEarly = ["spicy"]>>
<<set setup.fotogramDMAttachmentPoolsMid = ["spicy", "sexting", "cock", "cum", "female_masturbation"]>>
<<set setup.fotogramDMAttachmentPoolsLate = ["sexting", "spicy", "cock", "cum", "female_masturbation"]>>
<<set setup.fotogramDmDynamicAttachmentChanceEarly = 0.08>>
<<set setup.fotogramDmDynamicAttachmentChanceMid = 0.18>>
<<set setup.fotogramDmDynamicAttachmentChanceLate = 0.32>>
<<run setup.fotogramDMPersonaWeights = { dominant: 35, playful: 30, manipulative: 15, soft: 20 }>>
<<run setup.fotogramDMMediaBehaviorWeights = { text_only: 35, media_only: 20, mixed: 45 }>>
<<run setup.fotogramDMPersonaAddons = {
  dominant: ["Don't play innocent now.", "Keep the same energy.", "You opened this door."],
  manipulative: ["Don't switch up now.", "You wanted this vibe.", "Own what you started."],
